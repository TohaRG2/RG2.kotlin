<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.tohaman.rg2.activities.PllTestGame">


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/middle_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/row4LinearLayout">

        <ImageView
            android:id="@+id/test_image"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/z_cube_back_black"/>

        <TextView
            android:id="@+id/correct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/c_g"
            android:padding="@dimen/dimen_margin_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0" />

        <TextView
            android:id="@+id/uncorrect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/c_r"
            android:padding="@dimen/dimen_margin_8"
            android:text="0" />

    </android.support.constraint.ConstraintLayout>



    <LinearLayout
        android:id="@+id/row1LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="2"
            android:textSize="@dimen/plltest_button_textsize"
            android:text="New Button"/>

        <Button
            android:id="@+id/button2"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/row1LinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/row2LinearLayout">

        <Button
            android:id="@+id/button3"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>

        <Button
            android:id="@+id/button4"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/row2LinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/row3LinearLayout">

        <Button
            android:id="@+id/button5"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>

        <Button
            android:id="@+id/button6"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/row3LinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/row4LinearLayout">

        <Button
            android:id="@+id/button7"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>

        <Button
            android:id="@+id/button8"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/plltest_button_textsize"
            android:lines="2"
            android:text="New Button"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
